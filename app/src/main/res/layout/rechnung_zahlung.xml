<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/background_color_zahlung_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zahlung_nutzer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/textColorMainText"
                android:textSize="16sp"
                tools:text="Karl"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/zahlung_preis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/textColorMainText"
                android:textSize="16sp"
                tools:text="150.5 â‚¬"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorGray"
                android:textSize="16sp"
                android:text="|"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"/>

            <TextView
                android:id="@+id/zahlung_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColorMainText"
                android:textSize="16sp"
                tools:text="Essen Gehen" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zahlung_datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/textColorGray"
                android:textSize="12sp"
                tools:text="Mo., 16 Sep. 2019 19:11:23" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>